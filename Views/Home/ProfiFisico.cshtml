@model IEnumerable<CadastroCrud>
@{
    var contador = 0;
}

<h1>Cadastro realizado com sucesso!!!!</h1>
<br>
<h2>Lista de Formul√°rios</h2>
<br>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Especializacao</th>
                <th>Universidade</th>
                <th>Deletar Cadastro</th>
            </tr>
        </thead>
        <tbody>
            @if(Model  != null ){
            
@foreach (var item in Model.Where(item => item.registerSpecialization == "Fisico") )
{
            <tr>
                <td>@contador</td>
                <td>@item.registerName</td>
                <td>@item.registerEmail</td>
                <td>@item.registerSpecialization</td>
                <td>@item.registerUniversity</td>
                <td>
                    <form action="~/Home/Excluir" method="post">
                        <input type="hidden" name="id" value="@contador">
                        <input type="submit" value="Deletar">
                    </form></td>
            </tr>
  contador++;
}
}
        </tbody>
    </table>